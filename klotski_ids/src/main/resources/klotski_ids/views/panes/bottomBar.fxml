<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.GlyphsStack?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox fx:id="myHbox" alignment="CENTER_RIGHT"
      stylesheets="@../../assets/styles/BarStyle.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="klotski_ids.controllers.panes.BottomBarController">

    <Button fx:id="wikiButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToWiki" text="wiki">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../assets/images/icons/docs.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="gitHubButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToGithub"
            text="gitHub">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../assets/images/icons/github.png"/>
            </ImageView>
        </graphic>
    </Button>

</HBox>
