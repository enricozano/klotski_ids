                        <Button fx:id="level_4" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#goToLevel" prefHeight="208.0" prefWidth="200.0" text="Livello 4">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="200.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../../assets/images/Level4.png" />
                                </ImageView>
                            </graphic>
                        </Button>
