                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="3.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../../assets/images/Level1.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </AnchorPane>

                    <AnchorPane fx:id="level2AnchorPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Button fx:id="level_2" alignment="BOTTOM_CENTER" layoutX="2.0" mnemonicParsing="false" onAction="#goToLevel" prefHeight="208.0" prefWidth="200.0" text="Livello 2">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="200.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../../assets/images/Level2.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </AnchorPane>

                    <AnchorPane fx:id="level3AnchorPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <Button fx:id="level_3" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#goToLevel" prefHeight="208.0" prefWidth="200.0" text="Livello 3">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="200.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../../assets/images/Level3.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </AnchorPane>

