                        <RowConstraints maxHeight="93.0" minHeight="10.0" prefHeight="32.0" vgrow="ALWAYS" />
                    </rowConstraints>


                    <AnchorPane fx:id="level1AnchorPane" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
