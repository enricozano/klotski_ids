<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="403.0"
            prefWidth="602.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="klotski_ids.controllers.frameMenu.startMenuController">
    <bottom>
        <HBox fx:id="myHbox" alignment="CENTER_RIGHT" prefHeight="44.0" prefWidth="602.0"
              BorderPane.alignment="CENTER">
            <Button fx:id="wikiButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToWiki"
                    text="wiki">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@assets/images/icons/wikipedia-w.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="gitHubButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#goToGithub"
                    text="gitHub">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@assets/images/icons/github.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
    <top>
        <Label alignment="CENTER" fx:id="titlelabel" contentDisplay="CENTER" prefHeight="58.0" prefWidth="604.0"
               text="KLOTSKI" BorderPane.alignment="CENTER">
            <font>
                <Font size="40.0"/>
            </font>
        </Label>
    </top>
    <center>
        <Button fx:id="newgamebutton" onAction="#switchToSelectLevelScene" prefHeight="80.0" prefWidth="143.0"
                text="NEW GAME" BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </center>

</BorderPane>
